{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://leo.ai/schemas/leo-live-book.schema.json",
  "title": "LEO LIVE BOOK Schema",
  "description": "Schema for validating and constraining LEO LIVE BOOK content generated by LLMs.",
  "type": "object",
  "required": ["book", "chapters"],
  "additionalProperties": false,

  "properties": {
    "book": {
      "type": "object",
      "required": [
        "book_id",
        "title",
        "author",
        "description",
        "version"
      ],
      "additionalProperties": false,
      "properties": {
        "book_id": {
          "type": "string",
          "pattern": "^[a-z0-9\\-]{5,64}$",
          "description": "Stable unique identifier for the book"
        },
        "title": {
          "type": "string",
          "minLength": 3
        },
        "image_cover_url": {
          "type": "string",
          "format": "uri"
        },
        "author": {
          "type": "string",
          "minLength": 3
        },
        "description": {
          "type": "string",
          "minLength": 10
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic versioning (MAJOR.MINOR.PATCH)"
        }
      }
    },

    "chapters": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/chapter"
      }
    }
  },

  "$defs": {
    "chapter": {
      "type": "object",
      "required": [
        "chapter_id",
        "chapter_number",
        "chapter_title",
        "sections"
      ],
      "additionalProperties": false,
      "properties": {
        "chapter_id": {
          "type": "string",
          "pattern": "^ch[0-9]{2}$"
        },
        "chapter_number": {
          "type": "integer",
          "minimum": 1
        },
        "chapter_title": {
          "type": "string",
          "minLength": 3
        },
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/section"
          }
        }
      }
    },

    "section": {
      "type": "object",
      "required": [
        "section_id",
        "section_number",
        "section_title",
        "summary",
        "content"
      ],
      "additionalProperties": false,
      "properties": {
        "section_id": {
          "type": "string",
          "pattern": "^ch[0-9]{2}-sec[0-9]{2}$"
        },
        "section_number": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+$"
        },
        "section_title": {
          "type": "string",
          "minLength": 3
        },

        "summary_video": {
          "type": "object",
          "required": ["title", "youtube_id"],
          "additionalProperties": false,
          "properties": {
            "title": {
              "type": "string",
              "minLength": 3
            },
            "youtube_id": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9_-]{11}$"
            }
          }
        },

        "keywords": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 2
          },
          "uniqueItems": true
        },

        "summary": {
          "type": "string",
          "minLength": 10
        },

        "content": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 5
          }
        }
      }
    }
  }
}
